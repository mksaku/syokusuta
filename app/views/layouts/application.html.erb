<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <script src="https://js.pusher.com/4.1/pusher.min.js"></script>
  <title>Exam</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>

  <% if user_signed_in? %>
  <script>
    var pusher = new Pusher('<%= ENV["PUSHER_KEY"] %>',{
      encrypted: true,
      cluster: 'ap1'
    });

    var channel = pusher.subscribe("user_<%= current_user.id %>_channel");
    channel.bind('comment_created', function(data) {
      alert(data.message);
    });
    channel.bind('notification_created', function(data) {
      $('#unread_count').html(data.unread_counts);
    });
  </script>
<% end %>

</head>

<header>


  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Faxebook", ups_path , class: "navbar-brand"%>

    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li>
       <%= search_form_for @search, url: application_search_path do |f| %>
       <%= f.text_field :title_or_content,placeholder: '検索するテキストを入力...' %>
       <%= f.submit ("検索") , class: 'search-btn'%>
       <% end %>

        </li>
        <%= link_to "投稿", new_up_path , class: "navbar-brand"%>
        <li>
          <%= link_to notifications_index_path, class: "navbar-brand" do %>
            <i class="fa fa-bell fa-1x"><span id="unread_count"><%= @notifications_count %></span></i>
          <% end %>
     </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Achieve", root_path %></li>
            <li><%= link_to "home", ups_path %></li>

            <% if user_signed_in? %>
              <li><%= link_to 'MyPage', edit_user_registration_path %></li>
              <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
              <li><%= link_to 'Userlist', users_path %></li>
              <li><%= link_to "Message", conversations_path %></li>
            <% else %>
              <li><%= link_to 'Login', new_user_session_path  %></li>
              <li><%= link_to 'Signup', new_user_registration_path %></li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
</header>
<body>

<%= yield %>

</body>


</html>
